---
const { dark } = Astro.props;

import logo_white from "@/assets/landing/logo-white.png";
import logo_black from "@/assets/landing/logo-black1.png";
import BaseLink from "./BaseLink.astro";
---

<nav
  class={`sticky top-0 flex items-center p-2 px-4  ${dark ? "text-white" : "text-black bg-white/35"}`}
>
  <BaseLink href="/">
    <img
      src={dark ? logo_white.src : logo_black.src}
      class=`h-[4.5rem] transition duration-300 ease-in-out hover:cursor-pointer
      ${dark ? "hover:drop-shadow-[0_0_10px_rgba(255,255,255,0.6)]" : "hover:drop-shadow-[0_0_10px_rgba(0,0,0,0.3)]"}`
    />
  </BaseLink>

  <div class="flex-1"></div>
  <div class="flex items-center gap-10 pr-0 sm:pr-10">
    <BaseLink href="puzzles" class="text-center text-xl font-bold">Puzzles</BaseLink>
  </div>
</nav>

<style>
  a:hover {
    text-decoration: underline;
  }
</style>
