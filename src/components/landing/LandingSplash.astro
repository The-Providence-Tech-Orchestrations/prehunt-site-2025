---
import ImageRotateHover from "@/components/ImageRotateHover.astro"
import CountdownTimer from "../react/CountdownTimer"
import InfoDrawer from "../react/InfoDrawer"
---

<h>
  <section class="landing-art p-10 flex items-center justify-center h-screen text-[white]">
    <div class="space-y-1">
      <div class="disc-art relative pt-10">
        <ImageRotateHover src="/landing/cdspin-bw-slow.gif" className="absolute z-[10] w-[20rem] bottom-[0px] left-[100px] select-none"/>
        <!-- THIS IMAGE:  -->
        <img src="/landing/game-box.png" 
             class="absolute w-[20rem] z-[0] bottom-[-120px] left-[-50px] blur-[2px] select-none">
      </div>
      <CountdownTimer targetDate={new Date("2024-11-16T12:00:00-05:00")} className="sm:text-6xl text-5xl text-center pt-20 z-[100] w-[30rem] blur-[1px]" endText="refresh the page!" client:visible />
    </div>
  </section>
  <div class="fixed bottom-10 left-1/2 transform -translate-x-1/2 font-mono">
    <InfoDrawer client:visible />
  </div>
</h>