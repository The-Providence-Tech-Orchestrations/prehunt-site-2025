---
export interface Props {
  className?: string;
  letters: string[];
}

const { letters, className } = Astro.props;
---

<div
  class="grid grid-cols-10 border-2 border-black"
  style={{ gridArea: "a", fontFamily: "DM Mono, sans-serif" }}
>
  {
    letters.map((letter) => (
      <div
        class={`grid aspect-square place-items-center p-4 ${className} border-[0.5px] border-black`}
      >
        {letter}
      </div>
    ))
  }
</div>
