---
import BaseLayout from "@/layouts/BaseLayout.astro";
import ModePicker from "@/components/react/ModePicker";
import PuzzleIndex from "@/components/react/PuzzleIndex";
import { getCollection } from "astro:content";
import { PuzzlePacket } from "@/lib/types";

import cd2 from "@/assets/puzzles-page/Cd2.png";

const puzzles = await getCollection("puzzle");
---

<BaseLayout title="">
  <div class="relative">
    <img src={cd2.src} class="mx-auto mb-4 w-[18rem] blur-[0.5px] drop-shadow-[0_0_10px_rgba(0,0,0,0.5)]" />
  </div>
  <PuzzleIndex client:only="react" puzzles={puzzles} packet={PuzzlePacket.Two} />
</BaseLayout>
